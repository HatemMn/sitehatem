{
	"$schema": "http://json.schemastore.org/prettierrc",
	"plugins": ["prettier-plugin-astro", "prettier-plugin-packagejson"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": ".*rc",
			"options": { "parser": "json" }
		},
		{
			"files": ".nvmrc",
			"options": { "parser": "yaml" }
		}
	],
	"useTabs": true,
	"ignore": "package.json"
}
