---
import hatemTableau from "~/assets/tableau.webp";
import { Anchor } from "~/components/Anchor";
import BodyContents from "~/components/BodyContents.astro";
import HeroTertiary from "~/components/HeroTertiary.astro";

import { blogDescription } from "../constants";
import HeroLayout from "../layouts/HeroLayout.astro";
---

<HeroLayout
	alt="TODO!"
	description={blogDescription}
	images={{ dark: hatemTableau, light: hatemTableau }}
	primary="Resume"
	title="Hatem's resume"
>
	<Fragment slot="secondary">{blogDescription}</Fragment>
	<HeroTertiary slot="tertiary">
		New posts are shared online and posted to an RSS feed at <Anchor
			href="/rss.xml"
			target="_blank"
		>
			/rss.xml
		</Anchor>.
	</HeroTertiary>

	<BodyContents>
		<embed
			height="1600px"
			src="/resume/HMN_RESUME_ENG_A4.pdf"
			type="application/pdf"
			width="100%"
		/>
		<p>
			You can also <a download href="/resume/HMN_RESUME_ENG_A4.pdf"
				>download the resume</a
			>.
		</p>
	</BodyContents>
</HeroLayout>
