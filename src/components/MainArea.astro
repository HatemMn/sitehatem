---
import type { JSX } from "solid-js";

export interface Props {
	as: keyof JSX.IntrinsicElements;
	class?: string | undefined;
}

const { as: As, ...rest } = Astro.props;
---

<As {...rest} class:list={["mainArea", rest.class]}><slot /></As>

<style>
	.mainArea {
		margin: auto;
		width: 100%;
	}

	@media (min-width: 1017px) {
		.mainArea {
			padding: 0 calc(calc(100% - var(--widthFull)) / 2);
		}
	}
</style>
